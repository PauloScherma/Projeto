<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <!-- Container do topo com as duas imagens -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/white">

        <!-- Imagem das cruzes no topo -->

        <!-- Logotipo PSIASSIST centralizado -->
        <ImageView
            android:id="@+id/topo_image"
            android:layout_width="199dp"
            android:layout_height="212dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="-5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img1" />

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:contentDescription="Logotipo PSIASSIST"
            android:scaleType="fitCenter"
            android:src="@drawable/logo" />

    </RelativeLayout>

    <!-- Container do formulário de login -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <!-- Título Login -->
        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Login"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/login_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Faz login para continuar"
            android:textColor="#888888"
            android:textSize="14sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".01" />

        <!-- Campo Nome -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="Insere o teu nome"
            android:hint="NOME"
            android:inputType="textPersonName"
            android:padding="14dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <!-- Espaço entre campos -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:layout_weight=".01"
            android:text="Insere aqui o teu nome"
            android:textColor="@color/black"
            android:background="@color/grey"/>

        <!-- Campo Password -->


        <TextView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="Insere a tua password"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:padding="14dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="0dp"
            android:layout_weight=".01"
            android:text="Insere aqui a tua password"
            android:textColor="@color/black"
            android:background="@color/grey"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".01" />

        <Button
            android:id="@+id/btLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/black"
            android:text="Log in"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".01" />

        <!-- Link recuperar password -->
        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Esqueceste-te da password?"
            android:textColor="#777777"
            android:textSize="12sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".01" />

        <!-- Link criar conta -->
        <TextView
            android:id="@+id/create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Não tens conta? Cria uma aqui!"
            android:textColor="#777777"
            android:textSize="12sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".01" />
    </LinearLayout>

</LinearLayout>