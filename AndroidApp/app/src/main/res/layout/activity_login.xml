<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <!-- Container do topo com as duas imagens -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/white">

        <!-- Imagem das cruzes no topo -->

        <!-- Logotipo PSIASSIST centralizado -->
        <ImageView
            android:id="@+id/topo_image"
            android:layout_width="199dp"
            android:layout_height="212dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="-5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img1" />

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo"
            android:contentDescription="Logotipo PSIASSIST"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <!-- Container do formulário de login -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <!-- Título Login -->
        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="0dp" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/login_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faz login para continuar"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp" />

        <!-- Espaçamento -->

        <!-- Campo Nome -->
        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="NOME"
            android:textSize="14sp"
            android:padding="14dp"
            android:background="Insere o teu nome"
            android:textColor="@android:color/black"
            android:inputType="textPersonName" />

        <!-- Espaço entre campos -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Campo Password -->
        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="PASSWORD"
            android:textSize="14sp"
            android:padding="14dp"
            android:background="Insere a tua password"
            android:textColor="@android:color/black"
            android:inputType="textPassword" />

        <!-- Botão Login -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/black"
            android:text="Log in"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

        <!-- Link recuperar password -->
        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esqueceste-te da password?"
            android:textColor="#777777"
            android:textSize="12sp"
            android:layout_marginTop="16dp" />

        <!-- Link criar conta -->
        <TextView
            android:id="@+id/create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Não tens conta? Cria uma aqui!"
            android:textColor="#777777"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</LinearLayout>